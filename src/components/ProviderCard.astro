---
interface Props {
  name: string;
  price: string;
  specs: string;
  badge?: string;
  recommended?: boolean;
  link: string;
}

const { name, price, specs, badge, recommended, link } = Astro.props;
---

<div class={`provider-card ${recommended ? 'recommended' : ''}`}>
  {badge && <span class="card-badge">{badge}</span>}
  {recommended && <div class="recommended-ribbon">⭐ Recommended</div>}
  
  <h3 class="provider-name">{name}</h3>
  <div class="provider-price">{price}<span class="price-period">/month</span></div>
  <div class="provider-specs">{specs}</div>
  
  <div class="provider-features">
    <slot />
  </div>
  
  <a href={link} class="provider-btn" target="_blank" rel="noopener">
    Choose {name} →
  </a>
</div>

<style>
  .provider-card {
    position: relative;
    background: var(--bg-card);
    border: 2px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 24px;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .provider-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  }

  .provider-card.recommended {
    border-color: var(--accent);
    background: linear-gradient(135deg, rgba(255, 107, 87, 0.05), rgba(255, 107, 87, 0.02));
  }

  .recommended-ribbon {
    position: absolute;
    top: -12px;
    right: 24px;
    background: linear-gradient(135deg, var(--accent), var(--accent-hover));
    color: white;
    padding: 6px 16px;
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 700;
    box-shadow: 0 4px 12px rgba(255, 107, 87, 0.4);
  }

  .card-badge {
    display: inline-block;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    color: var(--accent);
    padding: 4px 12px;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .provider-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 12px 0;
    color: var(--text);
  }

  .provider-price {
    font-size: 2rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .price-period {
    font-size: 1rem;
    color: var(--text-secondary);
    font-weight: 400;
  }

  .provider-specs {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 20px;
    padding-bottom: 20px;
    border-bottom: 1px solid var(--border-subtle);
  }

  .provider-features {
    flex: 1;
    margin-bottom: 20px;
  }

  .provider-features :global(ul) {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .provider-features :global(li) {
    padding: 8px 0;
    color: var(--text-secondary);
    font-size: 0.9375rem;
    display: flex;
    align-items: start;
    gap: 8px;
  }

  .provider-features :global(li::before) {
    content: '✓';
    color: var(--green);
    font-weight: 700;
    flex-shrink: 0;
  }

  .provider-btn {
    display: block;
    width: 100%;
    padding: 12px 24px;
    background: var(--accent);
    color: white;
    text-align: center;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .provider-btn:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(255, 107, 87, 0.4);
  }

  @media (max-width: 768px) {
    .provider-card {
      padding: 20px;
    }

    .provider-name {
      font-size: 1.25rem;
    }

    .provider-price {
      font-size: 1.75rem;
    }
  }
</style>
