<style>
  *, *::before, *::after { margin: 0; padding: 0; box-sizing: border-box; }

  :root {
    --bg: #0d0d12;
    --bg-elevated: #16161d;
    --bg-card: #1c1c26;
    --bg-card-hover: #24242f;
    --border: #2d2d3d;
    --border-subtle: #222230;
    --text: #f5f5f7;
    --text-secondary: #a8a8b8;
    --text-tertiary: #75758a;
    --accent: #ff6b57;
    --accent-hover: #ff8574;
    --accent-glow: rgba(255, 107, 87, 0.25);
    --green: #52d179;
    --blue: #5b9eff;
    --yellow: #fbbf24;
    --purple: #a78bfa;
    --font-body: 'Inter', -apple-system, sans-serif;
    --radius-md: 12px;
    --radius-lg: 16px;
    --radius-xl: 24px;
    --space-md: 1rem;
    --space-lg: 1.5rem;
    --space-xl: 2rem;
    --space-2xl: 3rem;
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 12px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 12px 32px rgba(0, 0, 0, 0.5);
    --shadow-glow: 0 0 32px var(--accent-glow);
  }

  html { scroll-behavior: smooth; -webkit-font-smoothing: antialiased; }
  body {
    font-family: var(--font-body);
    background: var(--bg);
    color: var(--text);
    line-height: 1.6;
    overflow-x: hidden;
  }

  *:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 2px;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  .skip-to-main {
    position: absolute;
    left: -9999px;
    top: 0;
    z-index: 999;
    padding: var(--space-md);
    background: var(--accent);
    color: white;
    text-decoration: none;
    font-weight: 600;
    border-radius: var(--radius-md);
  }
  .skip-to-main:focus {
    left: var(--space-md);
    top: var(--space-md);
  }

  /* NAV */
  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-md) var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(13, 13, 18, 0.85);
    backdrop-filter: blur(24px);
    border-bottom: 1px solid var(--border-subtle);
    box-shadow: var(--shadow-sm);
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 700;
    font-size: 1.125rem;
    color: var(--text);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .nav-logo:hover { opacity: 0.8; }
  .nav-logo .lobster { font-size: 1.5rem; filter: drop-shadow(0 0 12px rgba(255, 107, 87, 0.5)); }

  .nav-cta {
    padding: 12px 24px;
    background: var(--accent);
    color: white;
    font-weight: 600;
    font-size: 0.875rem;
    border: none;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s;
    box-shadow: var(--shadow-sm);
  }

  .nav-cta:hover {
    background: var(--accent-hover);
    transform: translateY(-1px);
    box-shadow: var(--shadow-md), var(--shadow-glow);
  }

  .container { max-width: 1120px; margin: 0 auto; padding: 0 var(--space-lg); }

  /* HERO */
  .hero {
    padding: 140px 0 80px;
    text-align: center;
  }

  h1 {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 24px;
  }

  h1 .highlight {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-hover) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-sub {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 680px;
    margin: 0 auto 48px;
    line-height: 1.6;
  }

  .hero-buttons {
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 72px;
  }

  .btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    background: var(--accent);
    color: white;
    font-weight: 600;
    font-size: 1.125rem;
    border: none;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
    box-shadow: var(--shadow-md);
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), var(--shadow-glow);
  }

  .btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 16px 32px;
    background: var(--bg-card);
    color: var(--text);
    font-weight: 600;
    font-size: 1.125rem;
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .btn-secondary:hover {
    background: var(--bg-card-hover);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  /* COMPARISON SECTION */
  .section {
    padding: 80px 0;
  }

  .section-title {
    text-align: center;
    font-size: clamp(1.875rem, 4vw, 2.5rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    margin-bottom: 16px;
  }

  .section-sub {
    text-align: center;
    color: var(--text-secondary);
    font-size: 1.125rem;
    margin-bottom: 56px;
  }

  /* VPS COMPARISON TABLE */
  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: var(--space-2xl);
  }

  .provider-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-xl);
    padding: 32px;
    transition: all 0.3s ease;
  }

  .provider-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
  }

  .provider-card.recommended {
    border-color: var(--accent);
    box-shadow: 0 0 0 1px var(--accent), var(--shadow-md);
  }

  .provider-badge {
    display: inline-block;
    padding: 4px 12px;
    background: var(--accent);
    color: white;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--radius-md);
    margin-bottom: 16px;
  }

  .provider-card h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .provider-card .price {
    font-size: 2rem;
    font-weight: 800;
    color: var(--accent);
    margin-bottom: 8px;
  }

  .provider-card .price-note {
    font-size: 0.875rem;
    color: var(--text-tertiary);
    margin-bottom: 24px;
  }

  .provider-card ul {
    list-style: none;
    margin-bottom: 24px;
  }

  .provider-card li {
    padding: 8px 0;
    display: flex;
    align-items: start;
    gap: 10px;
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }

  .provider-card li::before {
    content: "‚úì";
    color: var(--green);
    font-weight: 700;
    flex-shrink: 0;
  }

  .provider-link {
    display: block;
    text-align: center;
    padding: 14px;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text);
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .provider-link:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent);
    transform: translateY(-1px);
  }

  .provider-card.recommended .provider-link {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .provider-card.recommended .provider-link:hover {
    background: var(--accent-hover);
  }

  /* AI MODEL CARDS */
  .model-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .model-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 28px;
    transition: all 0.3s;
  }

  .model-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
    border-color: var(--accent);
  }

  .model-card .model-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .model-icon {
    font-size: 2rem;
  }

  .model-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  .model-card .rating {
    color: var(--yellow);
    font-size: 0.875rem;
    margin-bottom: 12px;
  }

  .model-card p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .model-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 12px;
    margin-bottom: 20px;
  }

  .stat {
    background: var(--bg-elevated);
    padding: 12px;
    border-radius: var(--radius-md);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .stat-value {
    font-size: 1.125rem;
    font-weight: 700;
    color: var(--text);
  }

  /* FOOTER */
  footer {
    border-top: 1px solid var(--border-subtle);
    padding: var(--space-2xl) 0;
    background: var(--bg-elevated);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    font-weight: 700;
    font-size: 1.125rem;
    margin-bottom: 12px;
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--text-tertiary);
    margin-bottom: 20px;
    text-align: center;
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
    margin-bottom: 24px;
  }

  .footer-links a {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-links a:hover { color: var(--text); }

  .footer-disclaimer {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-align: center;
  }

  @media (max-width: 768px) {
    nav { padding: var(--space-md); }
    .hero { padding: 120px 0 60px; }
    .comparison-grid { grid-template-columns: 1fr; }
    .hero-buttons { flex-direction: column; align-items: center; }
    .btn-primary, .btn-secondary { width: 100%; max-width: 320px; }
  }
</style>
</head>
