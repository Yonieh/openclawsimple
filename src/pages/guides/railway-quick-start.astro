      border: 1px solid rgba(255, 107, 74, 0.2);
      border-radius: var(--radius);
      padding: 20px 24px;
      margin: 24px 0;
    }
    
    .highlight-box strong {
      color: var(--accent);
    }
    
    .pros-cons {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 16px;
      margin: 24px 0;
    }
    
    .pro-item, .con-item {
      display: flex;
      gap: 12px;
      padding: 16px;
      background: var(--bg-card-hover);
      border-radius: var(--radius);
      border: 1px solid var(--border);
    }
    
    .pro-item .icon { color: var(--green); font-size: 1.3rem; }
    .con-item .icon { color: var(--text-dim); font-size: 1.3rem; }
    
    .final-push {
      background: linear-gradient(135deg, var(--accent) 0%, var(--accent-soft) 100%);
      padding: 48px 32px;
      border-radius: var(--radius-lg);
      text-align: center;
      margin: 60px 0 40px;
    }
    
    .final-push h2 {
      color: #fff;
      font-size: 2rem;
